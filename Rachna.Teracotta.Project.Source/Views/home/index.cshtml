                                            </div>
                                            <script type="text/javascript">

                                                $(".hrfClothingSubCatId").click(function () {
                                                    $("#hdndefCatClothingValue").val("");
                                                    $.ajax({
                                                        type: 'GET',
                                                        url: '/home/GetProductsBySubCat',
                                                        data: { id: $(this).attr("catId") },
                                                        cache: false,
                                                        success: function (result) {
                                                            $("#ClothingContainer").html('');
                                                            $("#ClothingTemplate").tmpl(result).appendTo("#ClothingContainer");
                                                        }
                                                    });
                                                });

                                                if ($("#hdndefCatClothingValue").val() != "") {
                                                    $.ajax({
                                                        type: 'GET',
                                                        url: '/home/GetProductsBySubCat',
                                                        data: { id: $("#hdndefCatClothingValue").val() },
                                                        cache: false,
                                                        success: function (result) {
                                                            $("#ClothingTemplate").tmpl(result).appendTo("#ClothingContainer");
                                                        }
                                                    });
                                                }

                                            </script>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="spacer30"></div><!--Spacer-->
    </div>
    <!-------------- End mens products -------------->
    <!-------------- Start banner block -------------->
    <div class="banner-block clearfix">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    @if (HomePageData._ads != null && HomePageData._ads.Count > 0)
                    {
                        Rachna.Teracotta.Project.Source.Models.Ads Ads = HomePageData._ads.Where(m => m.Ads_Type == "Advertisement 3").FirstOrDefault();
                        if (HomePageData._ads.Count > 0 && Ads != null)
                        {
                            var add_type = Ads.Ads_Type;
                            if (add_type == "Advertisement 3")
                            {
                                <a href="@Ads.Ads_RedirectUrl">
                                    <img src="../@Ads.Ads_Banner_Or_Source" alt="" />
                                </a>
                            }
                        }
                    }
                    </a>
                </div>
            </div>
        </div>
        <div class="spacer30"></div><!-- spacer -->
    </div>
    <!-------------- Start sellers -------------->
    <div class="sellers clearfix">
        <div class="container">
            <div class="seller-block">
                <div class="row">
                    <h4 class="heading">Top Sellers In</h4>
                    @{
                        if (HomePageData._prdeight != null)
                        {
                            foreach (var item in HomePageData._prdeight)
                            {
                                <div class="col-sm-3">
                                    <div class="choice-product clearfix">
                                        <a href="/product/index?id=@item.Product_Id&title=@item.Product.Product_Title">
                                            <div class="choice-images">
                                                <img src="../@item.Product.ProductBanner.Where(m => m.Product_Banner_Default == 1).FirstOrDefault().Product_Banner_Photo" alt="" style="height:60px" />
                                            </div>
                                            <div class="choice-text">
                                                <h5>
                                                    @if (item.Product.Product_Title.Length > 20)
                                                    {
                                                        @item.Product.Product_Title.Substring(0, 17)<b>...</b>
                                                    }
                                                    else
                                                    {
                                                        @item.Product.Product_Title
                                                    }
                                                </h5>
                                                <span>
                                                    &#x20B9;@Math.Round(item.Product.Product_Our_Price)
                                                </span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="spacer30"></div>
    <div class="container">
        <div class="deal-product">
            <h4 class="heading">Proud Partners</h4>
            <div class="owl-carousel week-deal item-block">
                @foreach (var item in HomePageData._stores)
                {
                    <div class="product-item">
                        <ul class="products-row">
                            <li class="image-block">
                                <a href="/home/ProductByStore?storeId=@item.Store_Id&title=@item.Store_Name">
                                    <img src="../@item.Store_Logo" alt="Product Image">
                                </a>
                            </li>
                            <li class="products-details">
                                <a href="/home/ProductByStore?storeId=@item.Store_Id&title=@item.Store_Name">
                                    @item.Store_Name
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-------------- End sellers -------------->
    <div class="spacer30"></div><!-- Spacer -->
    <!-------------- Start Latest Blog -------------->
    <!-------------- Brand wrapper -------------->
</div>
<!-------------- End wrapper main -------------->
