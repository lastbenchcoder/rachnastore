        <div class="section-title">
            <h3>PROUD PARTNERS</h3>
        </div>
        @if (homePageModel._stores != null && homePageModel._stores.Count > 0)
        {
            <div class="brand-logo-slider slider-navigation-3">
                @foreach (var item in homePageModel._stores)
                {
                    <div class="brandlogo">
                        <a href="/home/ProductByStore?storeId=@item.Store_Id&title=@item.Store_Name">
                            <img src="../@item.Store_Logo" alt="brand logo">
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>
<!--// Brand Logo Area -->
<!-- Latest Blog Area -->
<div class="ho-section latest-blog-area bg-white pt-40">
    <div class="container">
        <div class="section-title">
            <h3>LATEST ADDITION</h3>
        </div>
        <div class="product-slider blogitem-slider slider-navigation-2">
            <!-- Single Blog -->
            @if (homePageModel._recentAddition != null && homePageModel._recentAddition.Count > 0)
            {
                foreach (var item in homePageModel._recentAddition)
                {
                    <div class="product-slider-col">
                        <article class="blogitem">
                            <div class="blogitem-thumb">
                                <a href="/product/index?id=@item.Product_Id&title=@item.Product_Title">
                                    <img class="hoproduct-frontimage" src="../../@item.ProductBanner.Where(m => m.Product_Banner_Default == 1).FirstOrDefault().Product_Banner_Photo" alt="product image">
                                </a>
                            </div>
                            <div class="blogitem-content">
                                <h4 class="blogitem-title">
                                    <a href="/product/index?id=@item.Product_Id&title=@item.Product_Title">
                                        @item.Product_Title
                                    </a>
                                </h4>
                                <div class="blogitem-meta">
                                    <span class="blogitem-date">
                                        <div class="hoproduct-rattingbox">
                                            <div class="rattingbox">
                                                @if (item.Store_Rating == 1)
                                                {
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                }
                                                else if (item.Store_Rating == 2)
                                                {
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                }
                                                else if (item.Store_Rating == 3)
                                                {
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                }
                                                else if (item.Store_Rating == 4)
                                                {
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                }
                                                else if (item.Store_Rating == 5)
                                                {
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                    <span class="active"><i class="ion ion-ios-star"></i></span>
                                                }
                                            </div>
                                        </div>
                                    </span>
                                    <span class="blogitem-author">
                                        <del class="oldprice">&#x20B9; @Math.Round(item.Product_Mkt_Price)</del>
                                        <span class="price">&#x20B9; @Math.Round(item.Product_Our_Price)</span>
                                    </span>
                                </div>
                            </div>
                        </article>
                    </div>
                }
            }
            <!--// Single Blog -->
        </div>
    </div>
</div>
<!--// Latest Blog Area -->
<!-- Newsletter Area -->
<div class="ho-section newsletter-area bg-grey ptb-50">
    <div class="container">
        <div class="newsletter">
            <div class="newsletter-title">
                <h2>Subscribe to our <span>Newsletter!</span></h2>
            </div>
            <div class="newsletter-content">
                <form action="/home/subscribe/" class="newsletter-form">
                    <input type="email" name="emailid" autocomplete="off" placeholder="Your email address..." required />
                    <button type="submit">Subscribe</button>
                </form>
                <!-- mailchimp-alerts start -->
                <div class="mailchimp-alerts text-centre">
                    <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                    <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                    <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                </div><!-- mailchimp-alerts end -->
            </div>
            <div class="newsletter-socialicons socialicons socialicons-radial">
                @if (homePageModel._social != null && homePageModel._social.Count > 0)
                {
                    <ul>
                        @foreach (var item in homePageModel._social)
                        {
                            <li><a href="@item.Scl_Ntk_URL" target="_blank"><img src="../../@item.Scl_Ntk_Icon" alt="" /></a></li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<!--// Newsletter Area -->